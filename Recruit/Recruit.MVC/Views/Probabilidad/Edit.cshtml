@model Recruit.MVC.Models.Probabilidad

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Probabilidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"> @*<--La acción a la que va a llamar el formulario*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pkprobabilidad" class="control-label"></label>
                <input asp-for="Pkprobabilidad" class="form-control" />
                <span asp-validation-for="Pkprobabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcionprobabilidad" class="control-label"></label>
                <input asp-for="Descripcionprobabilidad" class="form-control" />
                <span asp-validation-for="Descripcionprobabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la página principal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
